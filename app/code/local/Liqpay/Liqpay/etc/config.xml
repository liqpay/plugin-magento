<config>
    <modules>
        <Liqpay_Liqpay>
            <version>3.0</version>
        </Liqpay_Liqpay>
    </modules>
    <global>
        <blocks>
            <liqpay>
                <class>Liqpay_Liqpay_Block</class>
            </liqpay>
        </blocks>
        <models>
            <liqpay>
                <class>Liqpay_Liqpay_Model</class>
            </liqpay>
        </models>
        <helpers>
            <liqpay>
                <class>Liqpay_Liqpay_Helper</class>
            </liqpay>
        </helpers>
        <resources>
            <liqpay_setup>
                <setup>
                    <module>Liqpay_Liqpay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </liqpay_setup>
            <liqpay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </liqpay_write>
            <liqpay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </liqpay_read>
        </resources>
    </global>
    <frontend>
        <secure_url>
            <liqpay_liqpay>/liqpay/liqpay</liqpay_liqpay>
        </secure_url>
        <routers>
            <liqpay>
                <use>standard</use>
                <args>
                    <module>Liqpay_Liqpay</module>
                    <frontName>liqpay</frontName>
                </args>
            </liqpay>
        </routers>
        <translate>
            <modules>
                <Liqpay_Liqpay>
                    <files>
                        <default>Liqpay_Liqpay.csv</default>
                    </files>
                </Liqpay_Liqpay>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Liqpay_Liqpay>
                    <files>
                        <default>Liqpay_Liqpay.csv</default>
                    </files>
                </Liqpay_Liqpay>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <liqpay>
                <active>1</active>
                <model>liqpay/paymentMethod</model>
                <title>Liqpay (www.liqpay.ua)</title>
                <allowspecific>0</allowspecific>
                <specificcountry>UA</specificcountry>
                <language>ru</language>
                <sandbox>0</sandbox>
                <liqpay_action>https://www.liqpay.ua/api/3/checkout</liqpay_action>
                <liqpay_public_key backend_model="adminhtml/system_config_backend_encrypted" />
                <liqpay_private_key backend_model="adminhtml/system_config_backend_encrypted" />
                <debug>0</debug>
            </liqpay>
        </payment>
    </default>
</config>